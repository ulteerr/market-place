{
    "plugins": [
        "prettier-plugin-blade",
        "@prettier/plugin-php"
    ],
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "blade",
                "singleQuote": false
            }
        },
        {
            "files": "*.php",
            "options": {
                "tabWidth": 4,
                "singleQuote": false,
                "printWidth": 100
            }
        },
        {
            "files": "*.js",
            "options": {
                "tabWidth": 2,
                "singleQuote": true,
                "printWidth": 100
            }
        },
        {
            "files": "*.{yml,yaml,css,scss}",
            "options": {
                "tabWidth": 2,
                "singleQuote": true,
                "printWidth": 100
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "preserve"
            }
        }
    ]
}
