{
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": "*.{ts,js}",
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": "*.{yml,yaml,css,scss}",
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
